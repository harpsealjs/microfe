{
	"compileOnSave": false,
	"buildOnSave": false,
	"compilerOptions": {
		"baseUrl": ".",
		"declaration": true,
		"outDir": "lib",
		"module": "esnext",
		"target": "es6",
		"jsx": "react",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"lib": ["es6", "dom", "dom.iterable"],
		"sourceMap": false,
		"rootDir": "src",
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": false,
		"importHelpers": true,
		"strictNullChecks": true,
		"suppressImplicitAnyIndexErrors": true,
		"noUnusedLocals": true,
		"skipLibCheck": true,
		"paths": {
			"@/*": ["./src/*"],
			"@harpsealjs/*": ["../*"]
		}
	},
	"include": ["./src/**/*"],
	"exclude": ["./node_modules/**/*", "dist", "lib"]
}
